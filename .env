# ELK Stack 环境变量配置文件

# 版本配置
ELK_VERSION=8.19.1

# Elasticsearch 配置
ES_CLUSTER_NAME=elk-cluster
ES_NODE_NAME=elasticsearch
ES_JAVA_OPTS="-Xms1g -Xmx1g"
ES_DISCOVERY_TYPE=single-node

# Logstash 配置
LS_JAVA_OPTS="-Xms512m -Xmx512m"
LS_PIPELINE_WORKERS=2
LS_PIPELINE_BATCH_SIZE=125

# Kibana 配置
KIBANA_SERVER_NAME=kibana
KIBANA_SERVER_HOST=0.0.0.0

# 网络配置
ELASTICSEARCH_PORT=9200
LOGSTASH_BEATS_PORT=5044
LOGSTASH_TCP_PORT=5000
LOGSTASH_API_PORT=9600
KIBANA_PORT=5601

# 安全配置 (密码认证)
XPACK_SECURITY_ENABLED=true
XPACK_SECURITY_HTTP_SSL_ENABLED=false
XPACK_SECURITY_TRANSPORT_SSL_ENABLED=false

# 用户密码配置
ELASTIC_PASSWORD=elastic123456
KIBANA_PASSWORD=kibana123456
LOGSTASH_PASSWORD=logstash123456

# 内置用户配置
ELASTIC_USER=elastic
KIBANA_USER=kibana_system
LOGSTASH_USER=logstash_system

# 监控配置
XPACK_MONITORING_ENABLED=true

# 数据持久化路径
ES_DATA_PATH=./elasticsearch/data
ES_LOGS_PATH=./elasticsearch/logs
LS_LOGS_PATH=./logstash/logs
KIBANA_DATA_PATH=./kibana/data
KIBANA_LOGS_PATH=./kibana/logs